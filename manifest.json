{
  "name": "Twitter Replay Image and GIF Remover",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Remove replay Image and GIF. If do not have text remove replay.",
  "content_scripts": [{
    "matches": ["*://twitter.com/*"],
    "js": [
      "content.js"
    ]
  }],
  "background": {
  "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ]
}